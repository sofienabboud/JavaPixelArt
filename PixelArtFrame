package pixel_paint;

//import the JFrame class from Java's swing library
//JFrame is the class with the window
//Swing is Java's built in GUI library by Oracle
import javax.swing.JFrame;

//import to change the border 
import javax.swing.BorderFactory;

//import to add a clickable button
import javax.swing.JButton;

//import to create a popup color picker dialog
import javax.swing.JColorChooser;

//import to create a container to hold tool bar buttons
import javax.swing.JPanel;

//import to change font
import javax.swing.UIManager;
import java.awt.Font;

//import to represent chosen color
import java.awt.Color;

//import to let us place toolbar at top and canvas in the center
import java.awt.BorderLayout;


public class PixelArtFrame extends JFrame{
	
	private CanvasPanel canvas;

	//create a constructor for every new frame
	public PixelArtFrame() {
		setTitle("Pixel Painter");
		setSize(600, 600);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		//must be done so that when the window is closed the program does not continue running
		setLocationRelativeTo(null);
		//must be done so that the window does not end up in some random spot on the screen
		
		//create a grid 32 x 32 and set each pixel color to zero
		PixelGrid grid = new PixelGrid(32, 32, 0xFFFFFFFF);
		//formats the grid
		canvas = new CanvasPanel(grid, 20);
		//makes panel part of window with toolbar and canvas centered
		JPanel toolbar = new JPanel();
		JButton colorButton = new JButton("Color");
		JButton fillButton = new JButton("Fill");
		JButton eraserButton = new JButton("Eraser");
		//create a statement for using eraser button
		eraserButton.addActionListener(e -> {
		    canvas.setCurrentColor(0xFFFFFFFF); });
		toolbar.add(eraserButton);
		//create a statement for when the color button gets clicked
		colorButton.addActionListener(e -> {
		    Color chosen = JColorChooser.showDialog(this, "Choose a color", Color.BLACK);
		    if (chosen != null) {
		        canvas.setCurrentColor(chosen.getRGB());}});
		//creates a satement for when the fill button gets clicked
		fillButton.addActionListener(e -> {
		    canvas.setFillMode(true);});
		toolbar.add(fillButton);
		toolbar.add(colorButton);
		setLayout(new BorderLayout());
		add(toolbar, BorderLayout.NORTH);
		add(canvas, BorderLayout.CENTER);
		//size the window to properly fit everything
		pack();
		setVisible(true);
		//must be done so that the window actually appears - not just exist as an idea
		
	
		//now we will design this all to make it look as cute as possible
		// Pastel UI palette
		Color BG_PINK = new Color(255, 235, 240);
		Color PANEL_PINK = new Color(250, 220, 230);
		Color GRID_LINE = new Color(230, 200, 215);
		Color BUTTON_PINK = new Color(255, 200, 215);
		Color BUTTON_BORDER = new Color(240, 170, 190);
		//setting different colors 
		toolbar.setBackground(PANEL_PINK);
		getContentPane().setBackground(BG_PINK);
		//making the buttons rounded and less harsh
		colorButton.setBackground(BUTTON_PINK);
		colorButton.setFocusPainted(false);
		colorButton.setBorder(
		    BorderFactory.createLineBorder(BUTTON_BORDER, 2, true));
		eraserButton.setBackground(BUTTON_PINK);
		eraserButton.setFocusPainted(false);
		eraserButton.setBorder(
		    BorderFactory.createLineBorder(BUTTON_BORDER, 2, true));
		fillButton.setBackground(BUTTON_PINK);
		fillButton.setFocusPainted(false);
		fillButton.setBorder(
		    BorderFactory.createLineBorder(BUTTON_BORDER, 2, true));
		//setting a pixelated font
		Font uiFont = new Font("Dialog", Font.PLAIN, 13);
		UIManager.put("Button.font", uiFont);
		UIManager.put("Label.font", uiFont);
	}

	
	

}
